using System;

// Definición de la clase Estudiante
public class Estudiante
{
    // Propiedades de la clase Estudiante
    public int Id { get; set; } // Identificador único del estudiante
    public string Nombres { get; set; } // Nombres del estudiante
    public string Apellidos { get; set; } // Apellidos del estudiante
    public string Direccion { get; set; } // Dirección del estudiante

    // Array para almacenar hasta 3 números de teléfono
    // Se inicializa con un tamaño fijo de 3 para los tres teléfonos requeridos.
    public string[] Telefonos { get; set; } = new string[3]; 

    // Constructor de la clase Estudiante
    // Permite inicializar un objeto Estudiante con sus datos básicos.
    public Estudiante(int id, string nombres, string apellidos, string direccion)
    {
        Id = id;
        Nombres = nombres;
        Apellidos = apellidos;
        Direccion = direccion;
        // El array de Telefonos se inicializa automáticamente con el tamaño de 3
        // en la declaración de la propiedad, por lo que no es necesario
        // inicializarlo explícitamente aquí de nuevo, a menos que se quiera
        // asignar valores por defecto en la construcción.
    }

    // Método para mostrar la información del estudiante
    public void MostrarInformacion()
    {
        Console.WriteLine($"--- Información del Estudiante ---");
        Console.WriteLine($"ID: {Id}");
        Console.WriteLine($"Nombres: {Nombres}");
        Console.WriteLine($"Apellidos: {Apellidos}");
        Console.WriteLine($"Dirección: {Direccion}");
        Console.WriteLine($"Teléfonos:");
        // Iterar sobre el array de teléfonos para mostrarlos
        for (int i = 0; i < Telefonos.Length; i++)
        {
            // Solo mostrar el teléfono si no es nulo o vacío
            if (!string.IsNullOrEmpty(Teletonos[i]))
            {
                Console.WriteLine($"  Teléfono {i + 1}: {Teletonos[i]}");
            }
        }
        Console.WriteLine($"----------------------------------");
    }
}

// Clase principal para probar la funcionalidad
public class Program
{
    public static void Main(string[] args)
    {
        // Crear una instancia de la clase Estudiante
        Estudiante estudiante1 = new Estudiante(101, "Ana", "García Pérez", "Av. Siempre Viva 123");

        // Asignar los números de teléfono utilizando el array
        estudiante1.Teletonos[0] = "0991234567"; // Primer teléfono
        estudiante1.Teletonos[1] = "0229876543"; // Segundo teléfono
        estudiante1.Teletonos[2] = "0987654321"; // Tercer teléfono

        // Mostrar la información del estudiante
        estudiante1.MostrarInformacion();

        Console.WriteLine("\n--- Modificando un teléfono ---");
        estudiante1.Teletonos[1] = "0221112233"; // Modificar el segundo teléfono
        estudiante1.MostrarInformacion();

        Console.WriteLine("\n--- Creando otro estudiante con menos teléfonos ---");
        Estudiante estudiante2 = new Estudiante(102, "Juan", "Pérez López", "Calle Falsa 456");
        estudiante2.Teletonos[0] = "0990001111"; // Solo un teléfono
        estudiante2.MostrarInformacion();
    }
}
