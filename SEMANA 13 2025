using System;
using System.Collections.Generic;
using System.Linq;

public class Revista
{
    public string Titulo { get; set; }
    public string Autor { get; set; }
    public int Anio { get; set; }

    public Revista(string titulo, string autor, int anio)
    {
        Titulo = titulo;
        Autor = autor;
        Anio = anio;
    }

    public override string ToString()
    {
        return $"Título: {Titulo}, Autor: {Autor}, Año: {Anio}";
    }
}

public class CatalogoRevistas
{
    private List<Revista> revistas;

    public CatalogoRevistas()
    {
        revistas = new List<Revista>();
    }

    public void AgregarRevista(Revista revista)
    {
        revistas.Add(revista);
    }

    public List<Revista> BuscarPorTitulo(string titulo)
    {
        return revistas.Where(r => r.Titulo.IndexOf(titulo, StringComparison.OrdinalIgnoreCase) >= 0).ToList();
    }

    public List<Revista> BuscarPorAutor(string autor)
    {
        return revistas.Where(r => r.Autor.IndexOf(autor, StringComparison.OrdinalIgnoreCase) >= 0).ToList();
    }

    public List<Revista> BuscarPorAnio(int anio)
    {
        return revistas.Where(r => r.Anio == anio).ToList();
    }
}

// Ejemplo de uso
public class Program
{
    public static void Main()
    {
        CatalogoRevistas catalogo = new CatalogoRevistas();

        catalogo.AgregarRevista(new Revista("Ciencia Hoy", "Ana Pérez", 2020));
        catalogo.AgregarRevista(new Revista("Tecnología y Futuro", "Luis Gómez", 2023));
        catalogo.AgregarRevista(new Revista("Historia Viva", "Ana Pérez", 2021));

        Console.WriteLine("Buscar por título 'Ciencia':");
        foreach (var r in catalogo.BuscarPorTitulo("Ciencia"))
        {
            Console.WriteLine(r);
        }

        Console.WriteLine("\nBuscar por autor 'Ana Pérez':");
        foreach (var r in catalogo.BuscarPorAutor("Ana Pérez"))
        {
            Console.WriteLine(r);
        }

        Console.WriteLine("\nBuscar por año 2023:");
        foreach (var r in catalogo.BuscarPorAnio(2023))
        {
            Console.WriteLine(r)
